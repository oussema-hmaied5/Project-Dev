{% extends 'base_back.html.twig' %}

{% block title %}Actualite{% endblock %}

{% block body %}
    <h1>Actualite</h1>

    <table class="table">
        <thead>
        <tr>

            <th>titre</th>
            <th>contenu</th>
            <th>image</th>
            <th>date</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for actualite in actualites %}
            <tr>

                <td>{{ actualite.titre }}</td>
                <td>{{ actualite.contenu|raw }}</td>
                <td><img src="{{ asset('/images/actualite/'~actualite.image) }}" alt="" width="45" height="30"></td>
                <td>{{ actualite.updatedAt|date }}</td>
                <td>

                    <a href="{{ path('app_actualite_edit', {'id': actualite.id}) }}">edit</a>
                    {{ include('actualite/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_actualite_new') }}">Create new</a>
{% endblock %}